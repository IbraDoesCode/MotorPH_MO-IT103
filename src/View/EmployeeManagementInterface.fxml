<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" style="-fx-background-color: #f6f7eb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EmployeeManagementController">
   <children>
      <TableView fx:id="employeeTable" fixedCellSize="0.0" layoutX="25.0" layoutY="58.0" prefHeight="300.0" prefWidth="600.0">
         <columns>
            <TableColumn fx:id="employeeID_Column" editable="false" prefWidth="85.0" resizable="false" text="Employee #" />
            <TableColumn fx:id="lastName_Column" editable="false" prefWidth="85.0" text="Last Name" />
            <TableColumn fx:id="firstName_Column" editable="false" prefWidth="85.0" resizable="false" text="First Name" />
            <TableColumn fx:id="sssNo_Column" editable="false" prefWidth="85.0" resizable="false" sortable="false" text="SSS No" />
            <TableColumn fx:id="philhealthNo_Column" editable="false" prefWidth="85.0" resizable="false" sortable="false" text="Philhealth No" />
            <TableColumn fx:id="pagibigNo_Column" editable="false" prefWidth="85.0" resizable="false" sortable="false" text="Pagibig No" />
            <TableColumn fx:id="tinNo_Column" editable="false" prefWidth="85.0" resizable="false" sortable="false" text="Tin No" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Label layoutX="25.0" layoutY="14.0" text="Manage Employee Data">
         <font>
            <Font name="Verdana Bold Italic" size="14.0" />
         </font>
      </Label>
      <Button fx:id="compute_button" layoutX="514.0" layoutY="390.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="110.0" text="Compute Payroll" />
      <Button fx:id="add_button" layoutX="392.0" layoutY="390.0" mnemonicParsing="false" onAction="#switchToAddEmployeeInterface" prefHeight="25.0" prefWidth="110.0" text="Add Employee" />
      <Button fx:id="view_button" layoutX="25.0" layoutY="390.0" mnemonicParsing="false" onAction="#switchToViewEmployeeInterface" prefHeight="25.0" prefWidth="110.0" text="View Details" />
   </children>
</AnchorPane>
